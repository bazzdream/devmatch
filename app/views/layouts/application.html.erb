<!DOCTYPE html>
<html>
  <head>
    <title>DevMatchr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= tag :meta, :name => "stripe_key", :content => STRIPE_PUBLIC_KEY %>
  </head>

  <body>

  	<nav class="navbar navbar-default navbar-static-top" role="navigation">
  		<div class="container">
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav-collapse" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to root_path, class:'navbar-brand' do %>
		      	<%= icon('users') %>
		      	DevMatchr
		      <% end %>
		    </div>
		    <div class="collapse navbar-collapse" id="main-nav-collapse">
		    <div class="nav navbar-nav navbar-right">
		    	<% if current_user %>
		    		<%= button_to "Sign Out", destroy_user_session_path, class: 'btn btn-primary navbar-btn', method: :delete %>
		    	<% else %>
			    	<%= link_to "Login", new_user_session_path, class: 'btn btn-primary navbar-btn', method: :get %>
			    <% end %>
		    </div>
		      <ul class="nav navbar-nav navbar-right">
		        <li><%= link_to "About", about_path %></li>
		        <li><%= link_to "Contact Us", new_contact_path %></li>
		        <li></li>
		      </ul>
		    </div><!-- /.navbar-collapse -->
	  	</div><!-- /.container -->
	</nav>

	<div class="container">
		<% flash.each do |key, value| %>
			<%= content_tag :div, value, class: "alert alert-#{key}" %>
		<% end %>

  		<%= yield %>
  	</div><!-- /.container -->

  </body>
</html>
